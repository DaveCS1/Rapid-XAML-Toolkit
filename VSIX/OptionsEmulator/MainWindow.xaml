<Window
    x:Class="OptionsEmulator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OptionsEmulator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:options="clr-namespace:RapidXamlToolkit.Options;assembly=RapidXaml.Generation"
    Title="Rapid XAML Toolkit - Options Emulator"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Settings">
                <options:SettingsControl x:Name="Settings" />
            </TabItem>
            <TabItem Header="Profile">
                <options:ProfileConfigControl x:Name="ProfileConfig" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
